# Convex
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# AI Providers (at least one required)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Chat API Security (MUST be same value in both Next.js and Convex)
# Generate with: openssl rand -hex 32
CHAT_AUTH_SECRET=

# Stripe (required for production/SaaS mode only)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_SUBSCRIPTION_PRICE_ID=
STRIPE_CREDIT_PACK_PRICE_ID=

# BYOK encryption (required for production/SaaS mode only)
API_KEY_ENCRYPTION_SECRET=

# Langfuse LLM Observability (optional)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_BASEURL=https://us.cloud.langfuse.com

# Self-hosting mode (defaults to true if not set)
SELF_HOSTING=true
NEXT_PUBLIC_SELF_HOSTING=true
